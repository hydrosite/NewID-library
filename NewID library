-- Create a variable to hold the NewID object
local NewID = {}

-- Create a function to create the GUI
function NewID.CreateGui()
    -- Create a new ScreenGui
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "BlackGui"
    screenGui.ResetOnSpawn = false
    screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

    -- Create a new Frame
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(1, 0, 1, 0) -- Fullscreen
    frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- Black color
    frame.Parent = screenGui

    -- Optional: Add a UICorner for rounded edges
    local uiCorner = Instance.new("UICorner")
    uiCorner.CornerRadius = UDim.new(0, 10) -- Change the value for different corner roundness
    uiCorner.Parent = frame
end

-- Create a function to set the Gui
function NewID.SetGui(value)
    if value == "New" then
        NewID.CreateGui()
    end
end

-- Example usage
NewID.SetGui("New") -- This line triggers the GUI creation
